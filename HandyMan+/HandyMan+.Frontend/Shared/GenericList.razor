@typeparam Titem

@if (MyList is null)
{
    @if (Loading is null)
    {
                <div class="d-flex justify-content-center align-items-center">
                                            <img src="https://www.icegif.com/wp-content/uploads/2023/07/icegif-1265.gif" />
                </div>
    }
    else
    {
        @Loading
    }
}
else if (MyList.Count == 0)
{
    @if (NoRecords is null)
    {
                <p>No hay registros para mostrar...</p>
    }
    else
    {
        @NoRecords
    }
}
else
{
    @Body
}