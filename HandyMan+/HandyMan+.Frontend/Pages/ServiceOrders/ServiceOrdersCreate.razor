@page "/serviceorder/create"

<h3>Crear Ordenes de Servicio</h3>
<div class="card">
    <div class="card-header">
        <span>
            <i class="bi bi-globe-americas" /> Crear Proveedor
        </span>
    </div>
    <div class="card-body">
        <EditForm EditContext="editContext" OnValidSubmit="CreateAsync">
            <DataAnnotationsValidator />
            <div class="mb-3">
              <label>Estado</label>
                <div>
                    <select class="form-select" @bind="@ServiceOrder.State">
                        <option value="Creado">Creado</option>
                        <option value="En Progreso">En Progreso</option>
                        <option value="Completado">Completado</option>
                    </select>
                    <ValidationMessage For="@(() => ServiceOrder.State)" />

                </div>
            </div>
            <div class="mb-3">
                <label>Fecha Ejecución</label>
                <div>
                    <InputDate class="form-control" @bind-Value="@ServiceOrder.ExecutionDate" />
                    <ValidationMessage For="@(() => ServiceOrder.ExecutionDate)" />
                </div>
            </div>

             <div class="mb-3">
                <label>Detalle</label>
                <div>
                    <InputText class="form-control" @bind-Value="@ServiceOrder.Detail" />
                    <ValidationMessage For="@(() => ServiceOrder.Detail)" />
                </div>
            </div>



            <button class="btn btn-primary" type="submit">Guardar Cambios</button>
            <button class="btn btn-success" @onclick="Return">Regresar</button>
        </EditForm>
    </div>
</div>