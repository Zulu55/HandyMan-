@page "/states/edit/{StateId:int}"

<div class="card">
    <div class="card-header">
        <span>
            <i class="bi bi-globe-americas"/> Editar Estado/Departamento
        </span>
    </div>
    <div class="card-body">
        @if (state is null)
        {
                <Loading />
        }
        else
        {
                <FormWithName @ref="stateForm" Label="Estado/Departamento:" Model="state" OnValidSubmit="SaveAsync" ReturnAction="Return" />
        }
    </div>
</div>