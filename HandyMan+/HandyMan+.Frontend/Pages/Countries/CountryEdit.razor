@page "/countries/edit/{Id:int}"

<div class="card">
    <div class="card-header">
        <span>
            <i class="bi bi-globe-americas" /> Editar País
        </span>
    </div>
    <div class="card-body">
        @if (country is null)
        {
            <Loading/>
        }
        else
        {
                <FormWithName @ref="countryForm" Label="País:" Model="country" OnValidSubmit="EditAsync" ReturnAction="Return" />
        }
    </div>
</div>