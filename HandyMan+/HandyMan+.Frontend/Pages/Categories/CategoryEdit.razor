@page "/categories/edit/{Id:int}"

<div class="card">
    <div class="card-header">
        <span>
            <i class="bi bi-globe-americas" /> Editar Categoría
        </span>
    </div>
    <div class="card-body">

        @if (category is null)
        {
                <Loading/>
        }
        else
        {
                    <FormWithName @ref="categoryForm" Label="Categoría:" Model="category" OnValidSubmit="EditAsync" ReturnAction="Return" />
        }
    </div>
</div>